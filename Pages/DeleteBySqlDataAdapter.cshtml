@page
@model ASP.NET_RazorPage.Pages.DeleteBySqlDataAdapterModel
@{
    ViewData["Title"] = "DeleteBySqlDataAdapter";
}

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام و نام خانوادگی
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["FullName"]
        </dd>
        <dt class="col-sm-2">
            موبایل
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Mobile"]
        </dd>
        <dt class="col-sm-2">
            سن
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Age"]
        </dd>
        <dt class="col-sm-2">
            آدرس
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Address"]
        </dd>
    </dl>

    <form method="post">
        <input type="submit" value="حذف" asp-route-id="@Model.dataTable.Rows[0]["id"]" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-page="./sqlDataAdapter">انصراف</a>
    </form>
</div>

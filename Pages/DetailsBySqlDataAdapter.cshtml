@page
@model ASP.NET_RazorPage.Pages.DetailsBySqlDataAdapterModel
@{
    ViewData["Title"] = "DetailsBySqlDataAdapter";
}

<h1>جزئیات</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            نام ونام خانوادگی
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["FullName"]
        </dd>
        <dt class="col-sm-2">
            موبایل
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Mobile"]
        </dd>
        <dt class="col-sm-2">
            سن
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Age"]
        </dd>
        <dt class="col-sm-2">
            آدرس
        </dt>
        <dd class="col-sm-10">
            @Model.dataTable.Rows[0]["Address"]
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./EditBySqlDataAdapter" asp-route-id="@Model.dataTable.Rows[0]?["Id"]">ویرایش</a>
    <a class="btn btn-secondary" asp-page="./sqlDataAdapter">بازگشت</a>
</div>
